    <directive name="registerTranslations"
               attributes="directory"
               handler=".metaConfigure.registerTranslations" />

    <directive name="defaultLanguages"
               attributes="languages"
               handler=".metaConfigure.defaultLanguages" />

  </directives>
</zopeConfigure>
