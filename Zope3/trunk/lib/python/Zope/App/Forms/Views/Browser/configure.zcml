<zopeConfigure
   xmlns='http://namespaces.zope.org/zope'
   xmlns:browser='http://namespaces.zope.org/browser'
   package="Zope.App.Forms.Views.Browser"
>

  <!-- Form Widget View Directives -->
  <browser:defaultView for="Zope.Schema.IField." name="edit" />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.ITextLine"
      name="edit"
      factory=".Widget.TextWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IText"
      name="edit"
      factory=".Widget.TextAreaWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IBytesLine"
      name="edit"
      factory=".Widget.BytesWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IBytes"
      name="edit"
      factory=".Widget.BytesAreaWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IInt"
      name="edit"
      factory=".Widget.IntWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IFloat"
      name="edit"
      factory=".Widget.FloatWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IBool"
      name="edit"
      factory=".Widget.CheckBoxWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.ITuple"
      name="edit"
      factory=".Widget.TextAreaWidget." />

  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IList"
      name="edit"
      factory=".Widget.TextAreaWidget." />

  <!-- Default simple display view -->
  <browser:view
      permission="Zope.Public"
      allowed_interface=".IBrowserWidget."
      for="Zope.Schema.IField.IField"
      name="display"
      factory=".Widget.DisplayWidget" />
  
</zopeConfigure>
