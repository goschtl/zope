<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser">

  <browser:layer 
      name="css"
      interface="zope.app.css.layer" />  

  <browser:skin 
      name="CSS"
      interface="zope.app.css.CSS" />
  
  <browser:resource 
      name="zope3.css" 
      file="zope3.css" 
      layer="zope.app.css.layer" />
  
  <browser:resource 
      name="skin.css" 
      file="skin.css" 
      layer="zope.app.css.layer" />

</configure>
