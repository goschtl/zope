        interface=".interfaces.IRelationship"
        />
    <require
        permission="zope.ManageContent"
        set_schema=".interfaces.IRelationship"
        />
  </class>

  <class class=".dataproperty.DataRelationship">
    <require
        permission="zope.View"
        interface=".interfaces.IDataRelationship"
        />
