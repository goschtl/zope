#!/bin/sh

# Actions executed (via commitinfo) at the start of a commit.

# The script is invoked within the directory of the checkin.
#  $1 - the directory of the corresponding cvs repository for the checkins.
#  $2- - the names of the files being committed, from the working directory.
#  $CVSROOT - 

SCRIPT="$0"
REPOSITORY="$1"; shift
FILES="$@"

exec 1>>/tmp/precommit_actions

echo Script: "$SCRIPT", Repository: "$REPOSITORY", Files: "$FILES"
echo Root: "${CVSROOT}"
