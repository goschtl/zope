<configure 
   xmlns="http://namespaces.zope.org/browser"
   xmlns:zope="http://namespaces.zope.org/zope"
   i18n_domain="zorg.comment"
   >

    <page		
      name="comments.html"
      for="zorg.comment.IAttributeAnnotableComments"
      class=".comment.ListComments"
      template="./templates/comments.pt"
      permission="zope.View"
      title="Comments"
      menu="zmi_views" />
           
    <page		
      name="addcomment.html"
      for="zorg.comment.IAttributeAnnotableComments"
      class=".comment.AddComment"
      attribute="addComment"
      permission="zope.View" />
      
</configure>
