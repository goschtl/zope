<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:i18n="http://xml.zope.org/namespaces/i18n" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<title>
			Rest Editor
		</title>
		<link rel="stylesheet" type="text/css" media="print" href="/@@/style/print.css" />
		<link rel="stylesheet" type="text/css" media="screen" href="/@@/style/screen.css" />
		<link rel="stylesheet" type="text/css" media="screen" href="/@@/style/main.css" />
	</head>
	<body>
		<div id="layout">
			<div id="layout-header" class="columns" tal:define="uris view/uris">
				<div class="col first">
					<div id="banner">
						<a tal:attributes="href uris/home">
							<img src="/@@/images/circle-z.png" alt="(circle-z)" title="" height="36" width="36" />
							Zope 3 
						</a>
					</div>
				</div>
				<div class="col second">
					<div id="action-navigation" class="itemViews">
						<a href="@@login.html">
							Login
						</a>
						&nbsp; | &nbsp; 
						<a href="@@wiki.html">
							View
						</a>
						&nbsp; | &nbsp; Edit &nbsp;&nbsp;&nbsp;&nbsp; 
					</div>
				</div>
			</div>
			<div id="navigation-box">
				<div id="breadcrumb-navigation" metal:use-macro="context/@@wiki_macros/breadcrumbs" />
			</div>
			<div id="layout-columns" class="columns">
				<div class="bg">
					<div class="col first">
						<div id="main">
						    <p>ReStructured Text Editor</p>
							<div xmlns:metal="http://xml.zope.org/namespaces/metal">
								<form action="" method="POST" tal:attributes="action string:${context/@@absolute_url}/@@wikiupdate.html">
									<input type="hidden" id="asContentType" value="text/plain" />
									<input type="hidden" id="editor" value="rest" />
                                    <textarea class="edit-area" id="rest" name="content" cols="68" rows="22" value=""></textarea>
                                    <br/>
                                    <input name="text_submit" type="submit" value="Save">
					                <input name="cancel_submit" type="reset" value="Cancel"/>
								</form>
							</div>
						</div>
					</div>
					<div class="col second">
						<div metal:use-macro="context/@@wiki_macros/navigation_tree_box" />
					</div>
				</div>
				<hr size="2" />
			</div>
<!-- layout -->
	</body>
</html>
