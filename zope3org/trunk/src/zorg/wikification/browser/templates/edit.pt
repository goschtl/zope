<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:i18n="http://xml.zope.org/namespaces/i18n" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<title>
			Editor 
		</title>
			
        <script type="text/javascript" src="prototype.js" 
                tal:attributes="src string:${context/++resource++zorgajax/prototype.js}"></script>
        <script type="text/javascript" src="managers.js"
                tal:attributes="src string:${context/++resource++wikiscripts/managers.js}"></script>

        <script type="text/javascript"  tal:condition="python: view.editor == 'tinymce'"
                src="tiny_mce/tiny_mce.js"
                tal:attributes="src string:${context/++resource++tiny_mce/tiny_mce.js}"></script>
        <script tal:condition="python: view.editor == 'tinymce'" language="javascript" type="text/javascript">
        tinyMCE.init({
            mode : "exact",
            theme : "advanced",
            elements : "version_body",
            plugins : "table",
            theme_advanced_buttons3_add_before : "tablecontrols,seperator",
            debug : false,
            table_inline_editing: true
        });

        </script>
    
        <script type="text/javascript">
            window.onload = window.onresize = windowManager.onResizeDuringEdit
        </script>
    
		<link rel="stylesheet" type="text/css" media="print" href="/@@/style/print.css" />
		<link rel="stylesheet" type="text/css" media="screen" href="/@@/style/screen.css" />
		<link rel="stylesheet" type="text/css" media="screen" href="/@@/style/main.css" />
	</head>
	<body>
		<div id="layout">
			<div id="layout-header" class="columns" tal:define="uris view/uris">
				<div class="col first">
					<div id="banner">
						<a tal:attributes="href uris/home">
							<img src="/@@/images/circle-z.png" alt="(circle-z)" title="" height="36" width="36" />
							Zope 3 
						</a>
					</div>
				</div>
				<div class="col second">
					<div id="action-navigation" class="itemViews">
						<a href="@@wiki.html">
							View 
						</a>
						&nbsp; | &nbsp; Edit &nbsp;
				    </div>
				</div>
			</div>
			
            <table border="0" width="100%">
                <tr>
                    <td width="50%" align="left">
                        <div id="breadcrumb-navigation" metal:use-macro="context/@@wiki_macros/breadcrumbs" />
                    </td>
                    <td width="50%" align="right">
                        <span tal:condition="python: view.editor == 'rest'">ReST</span>
                        <a tal:condition="python: view.editor != 'rest'" 
                                href="./wikiedit.html?editor=rest"
                                tal:attributes="href python: './wikiedit.html?editor=rest&add' + request.get('add', '')"
                                >ReST</a>&nbsp;|&nbsp;
                        <span tal:condition="python: view.editor == 'tinymce'">Tiny MCE</span>
                        <a tal:condition="python: view.editor != 'tinymce'" 
                                href="./wikiedit.html?editor=tinymce"
                                tal:attributes="href python: './wikiedit.html?editor=tinymce&add' + request.get('add', '')"
                                >Tiny MCE</a>&nbsp;|&nbsp;
                        <span tal:condition="python: view.editor == 'kupu'">Kupu</span>
                        <a tal:condition="python: view.editor != 'kupu'"
                                href="./wikiedit.html?editor=kupu"
                                tal:attributes="href python: './wikiedit.html?editor=kupu&add' + request.get('add', '')"
                                >Kupu</a>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                   </td>
                 </tr>
            </table>
			<div id="layout-columns" class="columns">
				<div class="bg">
					<div class="col first">
                        <div id="main" tal:replace="structure view/main/render">
                        </div>
					</div>
					<div class="col second">
						<div metal:use-macro="context/@@wiki_macros/navigation_tree_box" />
					</div>
				</div>
		    </div>
		    <hr size="2" />
<!-- layout -->
	</body>
</html>
