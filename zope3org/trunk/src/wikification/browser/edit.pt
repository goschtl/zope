<html>
    <body>
    <h2>Edit</h2>
	    
	<form method="post"
	       enctype="multipart/form-data"
	       action="saveText">
	     
	    <input id="path" type="hidden" value="" 
	           tal:attributes="value view/request/form/path | nothing"/>
					           
		<table>
			<tr>
				<td valign="top" class="form-title">
					Title:
				</td>
				<td>
					<input id="title" name="title" type="text" size="50" value="" 
					           tal:attributes="value view/title"/>
				</td>
			</tr>
			<tr>
				<td valign="top" class="form-title">
					Abstract: 
				</td>
				<td>
					<textarea id="text" name="body"
					               tal:content="view/body" 
					               cols="60" rows="40" value="123"></textarea>
				</td>
			</tr>
			<tr>
				<td>&nbsp;		
				</td>
				<td bgcolor="#CCCCCC">
					<input name="entry_submit" type="submit" value="Submit">
					<input name="cancel_submit" type="reset" value="Cancel"/>
				</td>
			</tr>
		</table>
	</form>
    </body>
</html>
