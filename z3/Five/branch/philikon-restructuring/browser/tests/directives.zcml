<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           xmlns:five="http://namespaces.zope.org/five">

  <!-- make the zope2.Public permission work -->
  <redefinePermission from="zope2.Public" to="zope.Public" />

  <browser:pages
      for="Products.Five.tests.simplecontent.ISimpleContent"
      class=".pages.NoDocstringView"
      permission="zope2.Public">
    <browser:page
        name="nodoc-method"
        attribute="method"
        />
    <browser:page
        name="nodoc-function"
        attribute="function"
        />
    <browser:page
        name="nodoc-object"
        attribute="object"
        />
  </browser:pages>

  <!-- five:pagesFromDirectory loads all .pt files in a directory as pages.
       This is mainly used to load Zope2 skin templates so they can be used
       in five skins and layers. -->
  <five:pagesFromDirectory
      module="Products.Five.browser.tests"
      directory="pages"
      />

  <five:traversable
      class="Products.Five.tests.fancycontent.FancyContent"
      />

  <browser:page
      for="Products.Five.tests.fancycontent.IFancyContent"
      class=".pages.FancyView"
      attribute="view"
      name="fancy"
      permission="zope2.Public"
      />

</configure>
