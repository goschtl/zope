<configure
	xmlns="http://namespaces.zope.org/zope"
	xmlns:mail="http://namespaces.zope.org/mail"
	>

  <mail:smtpMailer
	  name="grokstar"
	  hostname="localhost"
	  port="25"
	  />
	
  <mail:queuedDelivery
	  name="grokstar"
	  permission="zope.SendMail"
	  queuePath="mail-queue"
	  mailer="grokstar"
	  />
	
  <subscriber handler=".notifyCommentAdded" />

</configure>
	  